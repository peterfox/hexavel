{
    "name": "peterfox/hexavel",
    "description": "The Hexavel Framework",
    "keywords": ["framework", "laravel", "hexavel"],
    "license": "proprietary",
    "version": "5.3.0",
    "type": "project",
    "require": {
        "php": ">=5.5.9",
        "peterfox/hexavel-components": "1.3.*"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpspec/phpspec": "~2.3",
        "behat/behat": "^3.0",
        "peterfox/hexavel-behat": "~1.1"
    },
    "minimum-stability": "stable",
    "autoload": {
        "classmap": [
            "support/database"
        ],
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\": "support/spec/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php bin/artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php bin/artisan optimize"
        ],
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('support/config/.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php bin/artisan key:generate"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "bin-dir": "bin"
    }
}
